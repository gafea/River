# Base URL (scheme + domain + optional port) used on both server and client.
APP_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Next.js dev/production server port. Change this to match APP_BASE_URL.
PORT=3000

# Database connection
DATABASE_URL="file:./prisma/dev.db"

# Session secret used by iron-session
SECRET_COOKIE_PASSWORD="super_secret_password_at_least_32_characters_long_for_sessions"

# WebAuthn-specific values are automatically derived from APP_BASE_URL.
# Uncomment to override defaults when using custom reverse proxies.
# RP_ID="localhost"
# EXPECTED_ORIGIN="http://localhost:3000"
