// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  credentials Credential[]
  assets      Asset[]
  tags String? // JSON string of default tags info
  
  incomeSources IncomeSource[]
  incomeEntries IncomeEntry[]
  
  hasCompletedSetup Boolean @default(false)
}

model IncomeSource {
  id        String   @id @default(cuid())
  name      String
  type      String   // "FIXED" | "DYNAMIC"
  amount    Float?   // Monthly amount for FIXED
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries   IncomeEntry[]
}

model IncomeEntry {
  id        String   @id @default(cuid())
  date      String   // YYYY-MM-DD
  amount    Float
  description String?
  sourceId  String?
  source    IncomeSource? @relation(fields: [sourceId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Credential {
  id               String @id @default(cuid())
  credentialId     String @unique
  publicKey        String
  counter          Int
  transports       String? // JSON string of transports
  userId           String
  user             User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Asset {
  id                 String   @id @default(cuid())
  name               String
  description        String?
  photoDataUrl       String?
  purchaseValue      Float
  expectedLifeWeeks  Int
  purchaseDate       String // ISO date
  tag                String @default("")
  terminalPrice      Float?
  events             String? // JSON array of AssetEvent
  userId             String
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}